<Window x:Class="Minty.View.Install"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minty.View"
    mc:Ignorable="d" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Black" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/IMG/StartupBackground.png"/>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="1">
            <Button x:Name="Button" Content="Install" Margin="544,334,35,35" BorderBrush="Black" Background="#FFFFA600" FontSize="30" FontFamily="Comic Sans MS" Click="Install_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Border>
        <Label HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="800" MouseDown="DragMove"/>
        <ProgressBar x:Name="ProgressBar" Margin="424,394,10,28" Minimum="0" Maximum="100" Visibility="Hidden" />
    </Grid>
</Window>
