        <Image HorizontalAlignment="Left" Height="187" Margin="1059,382,0,0" VerticalAlignment="Top" Width="181" Source="/L_images/araara.png"/>
        <Border x:Name="BottomBorder" BorderThickness="1" HorizontalAlignment="Left" Height="621" Margin="-5,99,0,0" VerticalAlignment="Top" Width="101"/>
        <Border x:Name="TopBorder" BorderThickness="1" HorizontalAlignment="Left" Height="99" VerticalAlignment="Top" Width="1286"/>
